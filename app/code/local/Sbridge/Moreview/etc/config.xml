<config>
    <modules>
        <Sbridge_Moreview>
            <version>1.0.6</version>
        </Sbridge_Moreview>
    </modules>
    <frontend>
        <routers>
            <moreview>
                <use>standard</use>
                <args>
                    <module>Sbridge_Moreview</module>
                    <frontName>moreview</frontName>
                </args>
            </moreview>
        </routers>
        <layout>
            <updates>
                <moreview>
                    <file>moreview.xml</file>
                </moreview>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args> 
                    <modules>
                            <moreview_admin after="Mage_Adminhtml">Sbridge_Moreview_Adminhtml</moreview_admin> 
                    </modules>
               </args> 
            </adminhtml> 
        </routers>
    </admin>
      
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <moreview_section translate="title" module="moreview">
                                        <title>moreview</title>
                                        <sort_order>100</sort_order>
                                    </moreview_section>
                                </children>
                            </config>
                        </children>
                    </system>
                 </children>
            </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <pricematch>
                    <file>moreview.xml</file>
                </pricematch>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <moreview>
                <class>Sbridge_Moreview_Block</class>
            </moreview>
        </blocks>
        <helpers>
            <moreview>
                <class>Sbridge_Moreview_Helper</class>
            </moreview>
        </helpers>
    </global>
</config>
